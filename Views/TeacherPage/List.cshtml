@model IEnumerable<SchoolApi.Models.Teacher>

@{
    ViewData["Title"] = "Teachers List";
}

<h1>@ViewData["Title"]</h1>

<form method="get">
    <label for="startDate">Start Date:</label>
    <input type="date" id="startDate" name="startDate" value="@ViewBag.StartDate?.ToString("yyyy-MM-dd")" />

    <label for="endDate">End Date:</label>
    <input type="date" id="endDate" name="endDate" value="@ViewBag.EndDate?.ToString("yyyy-MM-dd")" />

    <button type="submit">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Employee Number</th>
            <th>Hire Date</th>
            <th>Salary</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.TeacherId</td>
                <td>@teacher.TeacherFname @teacher.TeacherLname</td>
                <td>@teacher.EmployeeNumber</td>
                <td>@teacher.HireDate.ToString("yyyy-MM-dd")</td>
                <td>@teacher.Salary.ToString("C")</td>
                <td>
                    <a href="@Url.Action("Show", "TeacherPage", new { id = teacher.TeacherId })">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
